from yasha.parsers import Parser
import xml.etree.ElementTree as ET

class CmsisParser(Parser):
	file_extension = [".xml"]
	use_fields = True
	use_enumvalues = True

	def parse_interrupt(self, element):
		if not element:
			return None

		interrupt = {
			"name": element.find("name"),
			"value": element.find("value")
		}

		return interrupt

	def parse_enumvalues(self, element):
		if not self.use_enumvalues or not element:
			return []

		enums = []
		for e in element.findall("enumeratedValue"):
			d = {
				"name": e.find("name").text,
				"value": e.find("value").text,
			}
			enums.append(d)

		return enums

	def parse_fields(self, element):
		if not self.use_fields or not element:
			return []

		fields = []
		for f in element.findall("field"):
			d = {
				"name": f.find("name").text,
				"range": {
					"msb": f.find("msb").text,
					"lsb": f.find("lsb").text,
				},
				"enums": self.parse_enumvalues(f.find("enumeratedValues")),
			}
			if d["range"]["msb"] == d["range"]["lsb"]:
				d["range"]["pattern"] = d["range"]["lsb"]
			else:
				d["range"]["pattern"] = d["range"]["lsb"] + ".." + d["range"]["msb"]
			fields.append(d)

		return fields

	def parse_registers(self, element):
		if not element:
			return []

		registers = []
		for r in element.findall("register"):
			d = {
				"name": r.find("name").text,
				"offset": r.find("addressOffset").text,
				"fields": self.parse_fields(r.find("fields")),
			}
			registers.append(d)

		return registers

	def parse(self, file):
		tree = ET.parse(file.name)
		root = tree.getroot()

		periphs = {}
		periphs_order = []
		derived_periphs = []

		for p in root.iter("peripheral"):
			d = {
				"name": p.find("name").text,
				"base": p.find("baseAddress").text,
				"registers": self.parse_registers(p.find("registers")),
				"interrupt": self.parse_interrupt(p.find("interrupt")),
			}

			if "derivedFrom" in p.attrib:
				d["derived_from"] = p.attrib["derivedFrom"]
				derived_periphs.append(d["name"])

			periphs[d["name"]] = d
			periphs_order.append(d["name"])

		for p in [periphs[name] for name in derived_periphs]:
			base_periph = periphs[p["derived_from"]].copy()
			base_periph["name"] = p["name"]
			base_periph["base"] = p["base"]
			periphs[p["name"]] = base_periph

		vars = {
			"peripherals": [periphs[name] for name in periphs_order],
		}
		return vars
