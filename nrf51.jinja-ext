from yasha.parsers import Parser

import sys
sys.path.append(".")
import cmsis

class CmsisSvdParser(Parser):
	file_extension = [".svd"]

	def parse(self, file):
		svd = cmsis.SvdFile(file)
		svd.parse()

		vars = {
			"cpu": svd.cpu,
			"device": svd.device,
			"peripherals": [svd.peripherals[name] for name in svd.peripherals_order],
		}
		return vars

def filter_access(access):
	return {
		"read-only": "ro",
		"write-only": "wo",
		"writeOnce": "wo",
		"read-write": "rw",
		"read-writeOnce": "rw",
	}[access]

def filter_bitrange(bitrange):
	msb, lsb = bitrange[1:-1].split(":")
	if msb == lsb:
		return "{}".format(lsb)
	else:
		return "{}..{}".format(lsb, msb)

def filter_enums(enumvalues):
	if enumvalues["read-write"]:
		return enumvalues["read-write"]
	if enumvalues["read"]:
		return enumvalues["read"]
	if enumvalues["write"]:
		return enumvalues["write"]
